{
  "manifest_version": 3,
  "name": "K≈çdo",
  "version": "1.0.0",
  "description": "",
  "side_panel": {
    "default_path": "index.html"
  },
  "background": {
    "service_worker": "./src/service-worker.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "js": ["src/content.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "permissions": ["storage", "tabs", "activeTab", "sidePanel"]
}
